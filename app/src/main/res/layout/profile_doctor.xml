<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Replace AutoCompleteTextView with TextView -->
    <TextView
        android:id="@+id/searchTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search..."
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohit Sir"
        android:textSize="18sp"
        android:layout_below="@id/searchTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: Male"
        android:layout_below="@id/nameTextView"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: 25"
        android:layout_below="@id/genderTextView"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- New TextViews for Hospital and Specialization -->
    <TextView
        android:id="@+id/hospitalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital: XYZ Hospital"
        android:layout_below="@id/ageTextView"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/specializationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialization: Cardiology"
        android:layout_below="@id/hospitalTextView"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Button at the bottom -->
    <Button
        android:id="@+id/myButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See appointment log"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
